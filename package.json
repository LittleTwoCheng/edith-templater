{
  "name": "edith-templater",
  "author": {
    "name": "Ben Cheng(Little Two)",
    "email": "chengsiuyee@gmail.com"
  },
  "description": "A Microsoft Word Templater",
  "electronWebpack": {
    "title": "Edith Templater",
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js"
    }
  },
  "version": "1.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "build-win": "electron-builder -w",
    "build-mac": "electron-builder -m",
    "build": "electron-builder -mw",
    "dist-win": "yarn compile && yarn build-win",
    "dist-mac": "yarn compile && yarn build-mac",
    "dist": "yarn compile && yarn build",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "build": {
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": "portable"
    }
  },
  "dependencies": {
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "classnames": "^2.2.6",
    "date-fns": "^1.30.1",
    "docx-templates": "^2.10.0",
    "downshift": "^3.2.2",
    "notistack": "^0.4.2",
    "prop-types": "^15.7.1",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "read-excel-file": "^2.0.7",
    "source-map-support": "^0.5.10",
    "tv4": "^1.3.0",
    "uid-generator": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "electron": "4.0.1",
    "electron-builder": "20.38.4",
    "electron-webpack": "^2.6.2",
    "eslint": "^5.13.0",
    "eslint-config-react-app": "^3.0.7",
    "eslint-plugin-flowtype": "^3.4.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "webpack": "4.28.4"
  },
  "eslintConfig": {
    "extends": "react-app",
    "globals": {
      "__static": true
    }
  }
}
